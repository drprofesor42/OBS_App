@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}

<div class="main-wrapper login-body">
    <div class="login-wrapper">
        <div class="container">
            <div class="loginbox">
                <div class="login-left">
                    <img class="img-fluid" src="~/panel/img/login.png" alt="Logo">
                </div>
                <div class="login-right">
                    <div class="login-right-wrap">
                        <h1>ŞİFRE SIFIRLA</h1>
                        <p class="account-subtitle">E-Postaya Link Gönder</p>

                        <form asp-action="ForgotPassword"  method="post">
                            <div asp-validation-summary="All" class="text-danger">
                                <div class="form-group">
                                    <label>Şifreyi Sıfırlamak İçin E-posta Adresi Giriniz<span class="login-danger">*</span></label>
                                    <input class="form-control" name="Email" type="email">
                                    <span class="profile-views"><i class="fas fa-envelope"></i></span>
                                </div>
                                <div class="form-group">
                                    <button class="btn btn-primary btn-block" type="submit">Gönder</button>
                                </div>

                            </div>
                            <div class="form-group mb-0">
                                <button class="btn btn-primary primary-reset btn-block" asp-action="Login" asp-controller="Account" type="submit">Giriş Sayfası</button>
                            </div>
                        </form>
                        

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

