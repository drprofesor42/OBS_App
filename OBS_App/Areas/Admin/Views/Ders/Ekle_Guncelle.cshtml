@model Ders
@{
    ViewData["Title"] = "Ekle_Guncelle";
}
<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-body">
                <form asp-controller="Ders" asp-action="Ekle_Guncelle" method="post">
                    <div class="row">
                        <div class="col-12">
                            <h5 class="form-title"><span>Ders Ekle / Düzenle</span></h5>
                        </div>
                        <div class="col-12 col-sm-4">
                            <div class="form-group local-forms">
                                <label>Ders Adı <span class="login-danger">*</span></label>
                                <input asp-for="DersAd" class="form-control" type="text">
                               <span asp-validation-for="DersAd" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-12 col-sm-4">
                            <div class="form-group local-forms">
                                <label>Ders Kodu <span class="login-danger">*</span></label>
                                <input id="derskod" asp-for="DersKod" class="form-control" type="text">
                                <span asp-validation-for="DersKod" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-12 col-sm-4">
                            <div class="form-group local-forms">
                                <label>Ders Günü <span class="login-danger">*</span></label>
                                <select asp-for="DersGün" class="form-control select2">
                                    <option value="">Seçiniz</option>
                                    <option value="Pazartesi">Pazartesi</option>
                                    <option value="Salı">Salı</option>
                                    <option value="Çarşamba">Çarşamba</option>
                                    <option value="Perşembe">Perşembe</option>
                                    <option value="Cuma">Cuma</option>
                                </select>
                                <span asp-validation-for="DersGün" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-12 col-sm-4">
                            <div class="form-group local-forms">
                                <label>Ders Saati <span class="login-danger">*</span></label>
                                <input id="saat" asp-for="DersSaat" class="form-control" type="text">
                                <span asp-validation-for="DersSaat" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-12 col-sm-4">
                            <div class="form-group local-forms">
                                <label>Ders Kredisi <span class="login-danger">*</span></label>
                                <input asp-for="DersKredi" class="form-control" type="text">
                                <span asp-validation-for="DersKredi" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-12 col-sm-4">
                            <div class="form-group local-forms">
                                <label>Ders AKTS <span class="login-danger">*</span></label>
                                <input id="akts" asp-for="DersAkts" class="form-control" type="text">
                                <span asp-validation-for="DersAkts" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-12 col-sm-4">
                            <div class="form-group local-forms">
                                <label>Bolümünü Seçiniz<span class="login-danger">*</span></label>
                                <select asp-for="BolumId" asp-items="ViewBag.Bolum" class="form-control select2">
                                    <option value="">Seçiniz</option>
                                </select>
                                <span asp-validation-for="BolumId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-12 col-sm-4">
                            <div class="form-group local-forms">
                                <label>Öğretmenini Seçiniz</label>
                                <select asp-for="OgretmensId" asp-items="ViewBag.Ogretmen" class="form-control select2">
                                    <option value="">Seçiniz</option>
                                </select>
                                <span asp-validation-for="OgretmensId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="student-submit">
                                <button type="submit" class="btn btn-primary">Onayla</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

