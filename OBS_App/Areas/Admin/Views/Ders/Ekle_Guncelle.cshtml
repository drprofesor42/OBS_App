
@{
    ViewData["Title"] = "Ekle_Guncelle";
}
@model Ders

<div class="row">
	<div class="col-sm-12">
		<div class="card">
			<div class="card-body">
				<form asp-controller="Ders" asp-action="Ekle_Guncelle" method="post">
					<div class="row">
						<div class="col-12">
							<h5 class="form-title"><span>Ders Detayları</span></h5>
						</div>
						<div class="col-12 col-sm-4">
							<div class="form-group local-forms">
								<label>Ders Adı <span class="login-danger">*</span></label>
								<input asp-for="dersIsim" class="form-control">
							</div>
						</div>
						<div class="col-12 col-sm-4">
							<div class="form-group local-forms">
								<label>Ders Hocası <span class="login-danger">*</span></label>
								<input asp-for="profesorId" class="form-control">
							</div>
						</div>
						<div class="col-12 col-sm-4">
							<div class="form-group local-forms">
								<label>Ders Kodu <span class="login-danger">*</span></label>
								<input asp-for="dersKod" class="form-control">
							</div>
						</div>
						<div class="col-12 col-sm-4">
							<div class="form-group local-forms">
								<label>Ders Kredisi <span class="login-danger">*</span></label>
								<input asp-for="dersKredi" class="form-control">
							</div>
						</div>
						<div class="col-12 col-sm-4">
							<div class="form-group local-forms">
								<label>Ders AKTS <span class="login-danger">*</span></label>
								<input asp-for="dersAkts" class="form-control">
							</div>
						</div>
						<div class="col-12">
							<div class="student-submit">
								@if (Model == null)
								{
									<input name="type" id="type" type="hidden" value="0">
								}
								else
								{
									<input name="type" id="type" type="hidden" value="1">
								}
								<button type="submit" class="btn btn-primary">Onayla</button>
							</div>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

