@model IEnumerable<Bolum>
@{
    ViewData["Title"] = "Index";
}
<div class="student-group-form">
    <div class="row">
        <div class="col-lg-5 col-md-7">
            <div class="form-group">
                <input type="text" class="form-control" id="bolumArama" placeholder="Bölüm İsmine Göre Ara." oninput="aramaYap()">
            </div>
        </div>
        <div class="col-lg-5 col-md-7">
            <div class="form-group">
                <input type="text" class="form-control" id="bolumBaskaniArama" placeholder="Bölüm Başkanına Göre Ara." oninput="aramaYap()">
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
        <div class="card card-table">
            <div class="card-body">

                <div class="page-header">
                    <div class="row align-items-center">
                        <div class="col">
                            <h3 class="page-title">Bölümler</h3>
                        </div>
                        <div class="col-auto text-end float-end ms-auto download-grp">
                            <a asp-controller="Bolum" asp-action="Ekle_Guncelle" class="btn btn-primary"><i class="fas fa-plus"></i> Ekle</a>
                        </div>
                    </div>
                </div>

                <table class="table border-0 star-student table-hover table-center mb-0  table-striped">
                    <thead class="student-thread">
                        <tr>
                            <th>ID</th>
                            <th>Bölüm Adı</th>
                            <th>Bölüm Başkanı</th>
                            <th>Öğretmen Sayısı</th>
                            <th>Öğrenci Sayısı</th>
                            <th>Ders Sayısı</th>
                            <th class="text-end">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var bolum in Model)
                        {
                            <tr>
                                <td>@bolum.Id</td>
                                <td>
                                    <h2>
                                        <a>@bolum.BolumAd</a>
                                    </h2>
                                </td>
                                <td>@bolum.BolumBaskani</td>
                                
                                <td>@bolum.Ogretmensler.Count()</td>
                                <td>@bolum.Ogrencisler.Count()</td>
                                <td>@bolum.Dersler.Count()</td>
                                <td class="text-end">
                                    <div class="actions">
                                        <a href="javascript:;" class="btn btn-sm bg-success-light me-2">
                                            <i class="feather-eye"></i>
                                        </a>
                                        <a asp-action="Ekle_Guncelle" asp-controller="Bolum" asp-route-id="@bolum.Id" class="btn btn-sm bg-danger-light">
                                            <i class="feather-edit"></i>
                                        </a>
                                        <a onclick="confirmDelete(@bolum.Id)" class="btn btn-sm bg-danger-light">
                                            <i class="feather-trash-2"></i>
                                        </a>

                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@if (TempData["success"] != null)
{
    <script src="~/panel/plugins/sweetalert/sweetalert2.all.min.js"></script>
    <script src="~/panel/plugins/sweetalert/sweetalerts.min.js"></script>

    <script>
        var successMessage = "@TempData["success"]";

        Swal.fire({
            title: successMessage,
            icon: "success"
        });
    </script>
}
@section Scripts {
    <script src="~/panel/plugins/sweetalert/sweetalert2.all.min.js"></script>
    <script src="~/panel/plugins/sweetalert/sweetalerts.min.js"></script>
    <script>
        function confirmDelete(id) {
            const swalWithBootstrapButtons = Swal.mixin({
                customClass: {
                    confirmButton: "btn btn-success",
                    cancelButton: "btn btn-danger"
                },
                buttonsStyling: false
            });
            swalWithBootstrapButtons.fire({
                title: "Silmek İstediğinize Emin Misiniz?",
                icon: "warning",
                showCancelButton: true,
                confirmButtonText: "Evet!",
                cancelButtonText: "İptal!",
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    $.post('@Url.Action("Sil", "Bolum")', { id: id })
                        .done(() => swalWithBootstrapButtons.fire(
                            "İşlem Başarılı!",
                            "",
                            "success"
                        ).then(() => window.location.href = '@Url.Action("Index", "Bolum")'));
                } else if (
                    result.dismiss === Swal.DismissReason.cancel
                ) {
                    swalWithBootstrapButtons.fire({
                        title: "İşlem İptal Edildi!",
                        text: "",
                        icon: "error"
                    });
                }
            });
        }
    </script>
    <script>
        function aramaYap() {
            var bolumAdiInput, bolumBaskaniInput, bolumAdiFilter, bolumBaskaniFilter, table, tr, td, i;
            bolumAdiInput = document.getElementById("bolumArama");
            bolumBaskaniInput = document.getElementById("bolumBaskaniArama");
            bolumAdiFilter = bolumAdiInput.value.toUpperCase();
            bolumBaskaniFilter = bolumBaskaniInput.value.toUpperCase();
            table = document.querySelector(".star-student");
            tr = table.getElementsByTagName("tr");

            for (i = 0; i < tr.length; i++) {
                tdBolumAdi = tr[i].getElementsByTagName("td")[1];
                tdBolumBaskani = tr[i].getElementsByTagName("td")[2];
                if (tdBolumAdi && tdBolumBaskani) {
                    bolumAdiValue = tdBolumAdi.textContent || tdBolumAdi.innerText;
                    bolumBaskaniValue = tdBolumBaskani.textContent || tdBolumBaskani.innerText;
                    if (bolumAdiValue.toUpperCase().indexOf(bolumAdiFilter) > -1 && bolumBaskaniValue.toUpperCase().indexOf(bolumBaskaniFilter) > -1) {
                        tr[i].style.display = "";
                    } else {
                        tr[i].style.display = "none";
                    }
                }
            }
        }
    </script>
} 