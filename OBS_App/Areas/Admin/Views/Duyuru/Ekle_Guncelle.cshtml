@model Duyuru
@{
    ViewData["Title"] = "Ekle_Guncelle";
}
<div class="card">
    <form asp-controller="Duyuru" asp-action="Ekle_Guncelle" method="post">
        <div class="card-body">
            <div class="bank-inner-details">
                <div class="row">
                    <div class="col-lg-12 col-md-12">
                        <div class="form-group">
                            <label>Duyuru Başlığı<span class="text-danger">*</span></label>
                            <input asp-for="DuyuruBaslik" class="form-control" placeholder="Duyuru Başlığı">
                            <span asp-validation-for="DuyuruBaslik" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-12 col-md-12">
                        <div class="form-group">
                            <label>Duyuru Resmi</label>
                            <div class="change-photo-btn">
                                <div>
                                    <p>Dosya Yükle</p>
                                </div>
                                <input type="file" class="upload">
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12 col-md-12">
                        <div class="form-group">
                            <label class="col-form-label col-md-2">Duyuru Açıklama</label>
                            <div class="col-md-12">
                                <textarea asp-for="DuyuruMesaj" rows="5" cols="5" class="form-control" placeholder="Duyuru Açıklama"></textarea>
                                <span asp-validation-for="DuyuruBaslik" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class=" blog-categories-btn pt-0 ">
            <div class="bank-details-btn ">
                @if (ViewData["Ekleme"] == null)
                {
                    <input name="type" type="hidden" value="0">
                }
                else
                {
                    <input name="type" type="hidden" value="1">
                }
                <input name="duyuruGonderici" type="hidden" value="0">
                <input asp-for="OlusturmaTarihi" type="hidden" value="@DateTime.Now.Date.ToString("yyyy-MM-dd")">
                <span asp-validation-for="OlusturmaTarihi" class="text-danger"></span>
                <input asp-for="DuyuruGonderen"  type="hidden" />
                <button type="submit" class="btn bank-cancel-btn me-2">Duyuru Gönder</button>
            </div>
        </div>
    </form>
</div>


