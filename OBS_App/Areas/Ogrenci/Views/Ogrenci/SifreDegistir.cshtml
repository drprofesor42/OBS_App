@model SifreDegistirViewsModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">Şifre Değiştir</div>
                <div class="card-body">
                    <form asp-action="SifreDegistir" asp-controller="Ogrenci" method="post" novalidate>
                        <div class="form-group">
                            <label>Şifre <span class="login-danger">*</span></label>
                            <input asp-for="Parola" class="form-control pass-input" type="password">
                            <span asp-validation-for="Parola" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Şifre Onayı<span class="login-danger">*</span></label>
                            <div class="input-group">
                                <input asp-for="ParolaOnayla" class="form-control pass-input" type="password">
                                <div class="input-group-append">
                                    <span class="profile-views feather-eye toggle-password"></span>
                                </div>
                            </div>
                            <span asp-validation-for="ParolaOnayla" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-primary btn-block " type="submit">Kaydet</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

