@model List<OgrenciDers>

<div class="student-group-form">
	<div class="row">
		<div class="col-lg-3 col-md-6">
			<div class="form-group">
				<input type="text" class="form-control" placeholder="Ders İsmine Göre Ara ...">
			</div>
		</div>
		<div class="col-lg-3 col-md-6">
			<div class="form-group">
				<input type="text" class="form-control" placeholder="Ders Hocasına Göre Ara ...">
			</div>
		</div>
		<div class="col-lg-2">
			<div class="search-student-btn text-end">
				<button type="btn" class="btn btn-primary">Ara</button>
			</div>
		</div>
	</div>
</div>


<div class="row">
	<div class="col-sm-12">
		<div class="card card-table">
			<div class="card-body">

				<div class="page-header">
					<div class="row align-items-center">
						<div class="col">
							<h3 class="page-title">Dersler</h3>
						</div>
						<div class="col-auto text-end float-end ms-auto download-grp">
							<a href="#" class="btn btn-outline-primary me-2"><i class="fas fa-download"></i> İndir</a>
							<a asp-controller="Ders" asp-action="Ekle_Guncelle" asp-route-id="0" class="btn btn-primary"><i class="fas fa-plus"></i></a>
						</div>
					</div>
				</div>

				<table class="table border-0 star-student table-hover table-center mb-0 datatable table-striped">
					<thead class="student-thread">
						<tr>
							<th>Ders Adı</th>
							<th>Ders Hocası</th>
							<th>Ders Kredi</th>
							<th>Ders Akts</th>
							<th>Ders Vize</th>
							<th>Ders Final</th>
							<th>Ders Ödev</th>
							<th class="text-end">İşlemler</th>
						</tr>
					</thead>
					<tbody>

						@foreach (var ders in Model)
						{
							<tr>
								<td>@ders.dersId</td>
								<td>
									<h2>
										<a>Hoca</a>
									</h2>
								</td>
								<td>Kredi</td>
								<td>AKTS</td>
								<td>@ders.dersSinavSonuc1</td>
								<td>@ders.dersSinavSonuc2</td>
								<td>@ders.dersFinalSonuc</td>
								<td class="text-end">
									<div class="actions">
										<a href="javascript:;" class="btn btn-sm bg-success-light me-2">
											<i class="feather-eye"></i>
										</a>
										<a asp-controller="Ders" asp-action="Ekle_Guncelle" asp-route-id="@ders.ogrenciDersId" class="btn btn-sm bg-danger-light me-2">
											<i class="feather-edit"></i>
										</a>
										<a asp-controller="Ders" asp-action="Sil" asp-route-id="@ders.ogrenciDersId" class="btn btn-sm bg-success-light">
											<i class="feather-trash-2"></i>
										</a>
									</div>
								</td>
							</tr>
						}

					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>

